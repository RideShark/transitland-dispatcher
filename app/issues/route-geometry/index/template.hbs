<div class="row">
  <div class="col-md-4">
    <div class="form-group">
      <label>Issue Type</label>
      {{#power-select options=model.issueTypes searchField="display" selected=issue_type onchange=(action "typeChanged") allowClear=true as |issueType|}}
        {{issueType}}
      {{/power-select}}
    </div>
    {{#issue-table model=model issueClicked="issueClicked"}}{{/issue-table}}
    {{pagination-controls route="issues.route-geometry.index" hasPreviousPage=hasPreviousPage hasNextPage=hasNextPage previousOffset=previousOffset nextOffset=nextOffset perPage=per_page}}
  </div>
  <div class="col-md-8">
    <div>
      {{#edit-map model=model}}{{/edit-map}}
    </div>
  </div>
</div>

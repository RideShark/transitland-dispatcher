<h2>{{link-to 'Changesets' 'changesets'}} / Changeset #{{model.id}}</h2>

<dl class="dl-horizontal">
  <dt>Notes</dt>
  <dd>{{model.notes}}</dd>
  <dt>Applied</dt>
  <dd>{{model.applied}}</dd>
  <dt>Created</dt>
  <dd>{{model.created_at}}</dd>
  <dt>Updated</dt>
  <dd>{{model.updated_at}}</dd>
</dl>

{{#unless model.applied }}
  {{#link-to 'changesets.edit' model class="btn btn-primary"}}Edit this Changeset{{/link-to}}
  <input type="button" {{action 'apply'}} value="Apply" >
{{else}}
  Applied model; cannot edit or apply.
{{/unless}}

<h2>Change Payloads</h2>

{{change-payloads-list changeset=model}}

{{#leaflet-map lat=lat lng=lng zoom=zoom onMoveend=(action updateView)}}

  {{tile-layer url="http://{s}.basemaps.cartocdn.com/light_all/{z}/{x}/{y}.png"}}

  {{#each model as |stop|}}
    {{#marker-layer lat=stop.lat lng=stop.lng draggable=true popupOpen=(readonly stop.isOpen)}}
      {{stop-form stop=stop}}
    {{/marker-layer}}

    {{#each stop.stop_platforms as |stop_platform|}}
      {{#marker-layer lat=stop_platform.lat lng=stop_platform.lng draggable=true popupOpen=(readonly stop_platform.isOpen)}}
        {{stop-form stop=stop_platform}}
      {{/marker-layer}}
    {{/each}}

    {{#polygon-layer locations=stop.stationArea color="red"}}
      Station Area
    {{/polygon-layer}}

  {{/each}}
{{/leaflet-map}}

{{#leaflet-map bounds=model.bounds options=options rspAdded="rspAdded" stopAdded="stopAdded" onLayerremove=(action "actionLayerremove") onLayeradd=(action "actionLayeradd")}}
  {{#tile-layer url=url}}
    {{#measure-control primaryLengthUnit="meters" secondaryLengthUnit="kilometers" position="topleft"}}{{/measure-control}}
    {{#draw-control edit=edit draw=draw drawEdited="actionDrawEdited"}}{{/draw-control}}
    {{#each model.issueRouteStopPatterns as |rsp|}}
      {{edit-map/route-stop-pattern rspAdded="rspAdded" model=rsp onestop_id=rsp.onestop_id}}
    {{/each}}
    {{#each model.issueStops as |stop|}}
      {{edit-map/stop-marker stopAdded="stopAdded" model=stop onestop_id=stop.onestop_id}}
    {{/each}}
  {{/tile-layer}}
{{/leaflet-map}}
